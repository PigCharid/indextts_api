# ==== 基础镜像：CUDA 12.8 + cuDNN + Ubuntu 22.04（GPU 构建&运行）====
FROM nvidia/cuda:12.8.0-cudnn-devel-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=on

# 构建工具 & 音频依赖（deepspeed 常用到）
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python3-venv python3-pip \
    git curl wget build-essential \
    libsndfile1 ffmpeg \
    ninja-build cmake pkg-config \
    libaio-dev \
    && rm -rf /var/lib/apt/lists/*

# CUDA 环境变量（方便 DeepSpeed 找 nvcc）
ENV CUDA_HOME=/usr/local/cuda
ENV CUDA_PATH=/usr/local/cuda
ENV PATH=${CUDA_HOME}/bin:${PATH}
ENV LD_LIBRARY_PATH=/usr/local/cuda/lib64:/usr/local/cuda/targets/x86_64-linux/lib:${LD_LIBRARY_PATH}

RUN pip install -U pip uv

WORKDIR /workspace

# 先复制依赖定义文件，加速缓存
COPY pyproject.toml uv.lock* ./

# 安装依赖（包含 deepspeed）
RUN uv sync --extra deepspeed

# 拷贝代码（包含 app 和 indextts）
COPY app/ app/
COPY indextts/ indextts/

# HuggingFace 缓存也走 checkpoints（运行时挂载）
ENV HF_HOME=/workspace/checkpoints/hf_cache \
    HF_HUB_CACHE=/workspace/checkpoints/hf_cache \
    INDEXTTS_CHECKPOINTS=/workspace/checkpoints \
    INDEXTTS_CONFIG=/workspace/checkpoints/config.yaml \
    INDEXTTS_OUTPUT_DIR=/workspace/outputs \
    INDEXTTS_LOG_DIR=/workspace/logs \
    INDEXTTS_FP16=true \
    INDEXTTS_DEEPSPEED=true \
    INDEXTTS_CUDA_KERNEL=true

# 预建这些目录，保证挂载前容器里路径存在
RUN mkdir -p /workspace/checkpoints /workspace/outputs /workspace/logs

HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=5 \
  CMD curl -fsS http://127.0.0.1:8000/health || exit 1

EXPOSE 8000

CMD PYTHONPATH=. uv run app/main.py
